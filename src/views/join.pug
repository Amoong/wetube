extends base

block content
  if errorMessage
    span=errorMessage
  form(method="POST")
    input(placehoder="Name" name="name", type="text", required)
    input(placehoder="Email" name="email", type="email", required)
    input(placehoder="Username" name="username", type="text", required)
    input(placehoder="Password" name="password", type="password", required)
    input(placehoder="Confirm Password" name="password2", type="password", required)
    input(placehoder="Location" name="location", type="text", required)
    input(type="submit" value="Join")
  hr
  div
    span Already have an account? 
    a(href="/login") Log in now &rarr;