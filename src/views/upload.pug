extends base.pug

block content 
  div.recording-section
    video#preview.recording-view
    button#actionBtn.recording-button Start Recording
  if errorMessage
    span=errorMessage
  form(method="POST" enctype="multipart/form-data")
    label(for="video") Video File 
    input(type="file" accept="video/*", required, id="video", name="video")
    label(for="thumb") Thumbnail File 
    input(type="file" accept="image/*", required, id="thumb", name="thumb")
    input(placeholder="Title", name="title", required, type="text", maxlength=30)
    input(placeholder="Description", name="description", required, type="text", maxlength=120)
    input(placeholder="Hashtags, sepated by comma.", name="hashtags", required, type="text")
    input( type="submit", value="Upload Video")

block scripts
  script(src="/static/js/recorder.js") 